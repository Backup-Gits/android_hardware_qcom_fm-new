<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Favorite bottom bar-->
    <color name="favorite_button_normal">@color/primary</color> <!-- color of bottom bar -->
    <color name="favorite_button_active">@color/primary_dark</color> <!-- color of bottom bar when pressed -->
    <color name="favorite_button_text_color">@android:color/white</color> <!-- text color of bottom bar -->

    <!-- frequency area -->
    <color name="picker_background_color">@*android:color/secondary_material_settings_light</color> <!-- background of frequency dial and spikes -->
    <color name="picker_frequency_color">#ff000000</color> <!-- color of frequency spikes -->
    <color name="picker_frequency_text_color">@*android:color/text_color_primary</color> <!-- text color of frequency -->
    <color name="picker_dial_color">@color/accent</color> <!-- color of frequency dial -->

    <!-- Frequency dialog -->
    <color name="picker_frequency_back_forward_button_tint">@*android:color/secondary_material_settings</color> <!-- color of back and forward button of near frequency info -->
    <color name="picker_frequency_dialog_khz_background_color">@android:color/transparent</color> <!-- background color of kHz on frequency dialog -->
    <color name="picker_frequency_dialog_mhz_background_color">@android:color/transparent</color> <!-- background color of mHz on frequency dialog -->
    <color name="buttons_enabled">@android:color/white</color>
    <color name="buttons_disabled">@android:color/black</color>

    <!-- Material -->
    <color name="primary">#3F51B5</color>
    <color name="primary_dark">#303F9F</color>
    <color name="accent">#FF4081</color>
    <color name="background_color">@*android:color/background_material_light</color>
    <color name="navigation_bar_color">@color/primary</color>

</resources>
